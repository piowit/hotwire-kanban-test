= form_with(model: @card, local: true) do |form|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, 'error')} prohibited this board column from being saved:"
      %ul
        - @card.errors.full_messages.each do |message|
          %li= message

  .form-group
    = form.label :board_column
    = form.collection_select :board_column_id, BoardColumn.all, :id, :name, {}, class: 'form-control rounded-0 form-select'

  .form-group
    = form.label :position
    = form.number_field :position, class: 'form-control rounded-0'

  .form-group
    = form.label :title
    = form.text_field :title, class: 'form-control rounded-0'

  .form-group
    = form.label :description
    = form.text_field :description, class: 'form-control rounded-0'

  .actions.mt-2
    = form.submit 'Save', class: 'btn btn-primary rounded-0'